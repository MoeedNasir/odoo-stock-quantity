<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_move_line_tree_inward_quantity_restore" model="ir.ui.view">
        <field name="name">stock.move.line.list.restore.quantity</field>
        <field name="model">stock.move.line</field>
        <field name="inherit_id" ref="stock.view_move_line_tree"/>
        <field name="arch" type="xml">
            <!-- Target the Odoo 18 list tag -->
            <xpath expr="//list" position="inside">
                <field name="inward_quantity" invisible="1"/>
            </xpath>
        </field>
    </record>
</odoo>
